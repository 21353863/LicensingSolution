@model IEnumerable<LicensingSolution.Models.DrivingLicence>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!DOCTYPE html>
<html>
<body class="sidebar-mini fixed">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover table-bordered" id="table_id" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Driver.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenceNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenceExpiryDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PDPExpiryDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Driver.Owner)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Driver.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LicenceNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LicenceExpiryDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PDPExpiryDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Driver.Owner.FullName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.LicenceNumber">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.LicenceNumber">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.LicenceNumber">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/DataTables/jquery-3.4.1.js"></script>   
    <link href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <script src="~/DataTables/datatables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#table_id').DataTable({
            "scrollY": 250,
            "scrollX": true
        });
        responsive: true
    </script>
</body>
</html>