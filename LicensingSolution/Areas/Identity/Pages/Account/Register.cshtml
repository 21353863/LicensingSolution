@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="col-12 grid-margin">
    <div class="card">  
        <div class="card-body">
            <h2 class="card-title mdi mdi-rename-box text-lg-right">Register new user</h2>
            <form class="pt-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mb-20">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-control" asp-for="Input.Role" value="Owner">
                                        Owner
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-5">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-control" asp-for="Input.Role" value="AssociationClerk">
                                        Association Clerk
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-control" asp-for="Input.Role" value="Admin">
                                        Admin
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label>Title</label>
                            @Html.DropDownListFor(model => model.Input.Title, new[]{
                            new SelectListItem(){Text="Mr",Value="Mr"},
                            new SelectListItem(){Text="Mrs",Value="Mrs"},
                            new SelectListItem(){Text="Ms",Value="Ms"},
                            }, "Select Title", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row mb-20">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.FirstName" class="control-label"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.MiddleName" class="control-label"></label>
                            <input asp-for="Input.MiddleName" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row mb-20">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.LastName" class="control-label"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label asp-for="Input.AssociationId" class="control-label"></label>
                            <input asp-for="Input.AssociationId" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label>Username</label>
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <span class="input-group-text bg-transparent border-right-0">
                                <i class="mdi mdi-account-outline text-primary"></i>
                            </span>
                        </div>
                        <input asp-for="Input.Email" class="form-control border-left-0" placeholder="Username">
                    </div>
                </div>
                <div class="form-group row">
                    <label>Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <span class="input-group-text bg-transparent border-right-0">
                                <i class="mdi mdi-lock-outline text-primary"></i>
                            </span>
                        </div>
                        <input asp-for="Input.Password" class="form-control border-left-0" id="exampleInputPassword" placeholder="Password">
                    </div>
                </div>
                <div class="form-group row">
                    <label>Confirm Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend bg-transparent">
                            <span class="input-group-text bg-transparent border-right-0">
                                <i class="mdi mdi-lock-outline text-primary"></i>
                            </span>
                        </div>
                        <input asp-for="Input.ConfirmPassword" class="form-control border-left-0" id="exampleInputPassword" placeholder="Password">
                    </div>
                </div>
                <div class="mt-3 row">
                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <partial name="_ValidationScriptsPartial" />
}
