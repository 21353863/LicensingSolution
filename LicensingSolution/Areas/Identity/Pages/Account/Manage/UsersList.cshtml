@page
@model LicensingSolution.Areas.Identity.Pages.Account.Manage.UsersListModel
@{
}

<table class="table table-hover table-bordered" id="table_id" style="width: 100%">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Username
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/DataTables/jquery-3.4.1.js"></script>
<link href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
<script src="~/DataTables/datatables.min.js" type="text/javascript"></script>
<script type="text/javascript">
        $('#table_id').DataTable({
            "scrollY": 250,
            "scrollX": true
        });
        responsive: true
</script>
